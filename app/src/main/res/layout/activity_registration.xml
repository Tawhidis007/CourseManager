<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Registration"
    >



    <android.support.v7.widget.CardView

        app:cardCornerRadius="2dp"
        android:id="@+id/info_card"
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_margin="20dp"
        android:elevation="8dp"
        app:cardBackgroundColor="#E0E0E0"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Name"
                android:textColor="#424242"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/info_et_name"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/et_bg2"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:textCursorDrawable="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Email"
                android:textColor="#424242"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/info_et_email"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/et_bg2"
                android:hint="Example@gmail.com"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textCursorDrawable="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Password"
                android:textColor="#424242"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/info_id_password"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/et_bg2"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textCursorDrawable="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="University"
                android:textColor="#424242"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/info_id_university"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/et_bg2"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:textCursorDrawable="@null" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/agreement_id"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="I Agree to the"
                    android:textColor="#424242" />

                <Button
                    android:id="@+id/terms_btn"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:text="Terms and Conditions"
                    android:textColor="#1E88E5"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/btn_proceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#b56969"
        android:text="Proceed"
        android:textColor="#E0E0E0"
        android:textSize="20dp"
        />







</LinearLayout>